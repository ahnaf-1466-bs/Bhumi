{{!
    @template local_marketing/users_list


    Example context (json):
    {

    }
}}

<div>
    <h3>{{#str}} coursename, local_marketing {{/str}}: {{coursefullname}}</h3>

    <h3>{{#str}} scheduled_time, local_marketing {{/str}}: {{scheduled_time}}</h3>
    
    <p>
        {{#str}} totalusers, local_marketing {{/str}}: {{totalusers}}
    </p>
    <a class="btn btn-secondary" href="{{goback}}">
        {{#str}} goback, local_marketing {{/str}}
    </a>
    <table class="table table-hover table-center mt-5">
        <tr class="text-center">
            <th>
                {{#str}} firstname, local_marketing {{/str}}
            </th>
            <th>
                {{#str}} useremail, local_marketing {{/str}}
            </th>
            <th>
                {{#str}} status, local_marketing {{/str}}
            </th>
        </tr>
        {{#users}}
        <tr class="text-center">
            <td>{{firstname}}</td>
            <td>{{email}}</td>
            <td>
                {{#sent_status}}
                    <span class="badge badge-success">
                    {{#str}} sent, local_marketing {{/str}}
                    </span>
                {{/sent_status}}

                {{^sent_status}}
                    <span class="badge badge-warning">
                    {{#str}} pending, local_marketing {{/str}}
                    </span>
                {{/sent_status}}
            </td>
        </tr>
        {{/users}}
        
    
    </table>
</div>
