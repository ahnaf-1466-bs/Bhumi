<table class="table table-hover table-striped mt-5">
   <thead>
    <tr>
        <th scope="col" class="text-center">
          {{#str}} course_name, local_marketing {{/str}}
        </th>
        <th scope="col" class="text-center">
          {{#str}} mail_subject, local_marketing {{/str}}
        </th>
        <th scope="col" class="text-center">
          {{#str}} mail_body, local_marketing {{/str}}        
        </th>
        <th scope="col" class="text-center">
          {{#str}} sent_status, local_marketing {{/str}}
        </th>
        <th scope="col" class="text-center">
          {{#str}} scheduled_time, local_marketing {{/str}}
        </th>
        <th scope="col" class="text-center">
          {{#str}} last_modified_time, local_marketing {{/str}}
        </th>
        <th scope="col" class="text-center">
          {{#str}} actions, local_marketing {{/str}}
        </th>
    </tr>
  </thead>
  <tbody>
    {{#texttodisplay}}
     <tr>
          <td class="text-center">{{course_name}}</td>
          <td class="text-center">{{mail_subject}}</td>
          <td class="text-center">{{mail_body}}</td>
          <td class="text-center">
            {{#sent_status}}
                  <span class="badge badge-success">
                  {{#str}} sent, local_marketing {{/str}}
                  </span>
            {{/sent_status}}

            {{^sent_status}}
                <span class="badge badge-warning">
                {{#str}} pending, local_marketing {{/str}}
                </span>
            {{/sent_status}}
          </td>
          <td class="text-center">{{scheduled_time}}</td>
          <td class="text-center">{{last_modified_time}}</td>
          <td class="text-center">
              <a href="{{userslist}}?id={{id}}" >
                <i class="fa fa-users"></i>
              </a>
              <a class="ml-2" href="{{editurl}}?id={{id}}" >
                <i class="fa fa-edit"></i>
              </a>
              <a class="ml-2 text-danger" onclick="showAlert({{id}})">
                <i class="fa fa-trash"></i>
              </a>
          </td>
     </tr>
    {{/texttodisplay}}
  </tbody>
</table>

<div class="text-center mt-5 pt-5">
    <a href="{{inserturl}}" class="btn btn-primary">Create Entry </a>
</div>


<script>
  function showAlert(id) {  
    let result = confirm('Are you sure you want to delete the entry?');
    if(result) {
      window.location.href = '{{editurl}}?id=' + id + '&delete=1';Â 
    }
  }
</script> 



