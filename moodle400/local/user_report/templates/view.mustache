{{!
    @template local_user_report/view


    Example context (json):
    {

    }
}}

<div class="mt-5">
    <h4>{{ page_header }} </h4>
    <p> Total number of users: <span class="bold">{{ usercount }}</span> </p>
    <div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Edit</th>
                </tr>
            </thead>
            <tbody>
                {{#users}}
                <tr>
                    <td>
                        <a href="{{ profile_link }}?id={{ id }}" target="_blank">
                            {{ firstname }} {{ lastname }}
                        </a>
                    </td>
                    <td>{{ email }}</td>
                    <td>
                        <a class="ml-2 mr-1" href="{{ edit_link }}?id={{ id }}" target="_blank">
                            <i class="icon fa fa-cog fa-fw " title="Edit" role="img" aria-label="Edit"></i>
                        </a>
                        
                    </td>
                </tr>

                {{/users}}
            </tbody>
        </table>
    </div>
    
</div>