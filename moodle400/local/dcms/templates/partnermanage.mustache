{{#messages}}
    <div class="localmessage{{messagetype}} card mt-2 mb-2">
        <div class="card-body">
            <img src="{{picurl}}" alt="" width="180" height="150" class="dcms_img"/>
            <p>{{partnername}} | {{partnername_bn}}</p>
            <a href="{{partnerurl}}?messageid={{id}}">
                {{#pix}} t/edit, core, Edit this section {{/pix}}
            </a>
            <a href="{{partnerurl}}?messageid={{id}}&del=1">
                {{#pix}} t/delete, core, Edit this section {{/pix}}
            </a>
        </div>
    </div>
{{/messages}}

<hr>
