<div class="mt-5">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
            {{#userdetails}}
                <tr>
                    <td>{{ count }}</td>
                    <td>{{ username }}</td>
                    <td>{{ email }}</td>
                    <td>{{ phone }}</td>
                    <td>
                        <a href="{{featureurl}}?seatid={{id}}">
                        {{#pix}} t/edit, core, Edit this section {{/pix}}
                        </a>
                    </td>
                    <td>
                        <a href="{{featureurl}}?seatid={{id}}&del=1">
                        {{#pix}} t/delete, core, Delete this section {{/pix}}
                        </a>
                    </td>
                </tr>
            {{/userdetails}}
            </tbody>
        </table>
</div>