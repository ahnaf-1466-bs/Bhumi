<div>

    <h3>{{#str}} prereg_batch_users, local_preregistration {{/str}} {{coursefullname}}</h3>
    
    <p>
        {{#str}} number_of_users, local_preregistration {{/str}}: {{totalusers}}
    </p>
    <a class="btn btn-secondary" href="{{goback}}">
        {{#str}} goback, local_preregistration {{/str}}
    </a>
    <table class="table table-hover table-center mt-5">
        <tr class="text-center">
            <th>
                {{#str}} batch_name, local_preregistration {{/str}}
            </th>
            <th>
                {{#str}} course_name, local_preregistration {{/str}}
            </th>
            <th>
                {{#str}} username, local_preregistration {{/str}}
            </th>
            <th>
                {{#str}} useremail, local_preregistration {{/str}}
            </th>
        </tr>
        {{#users}}
        <tr class="text-center">
            <td>{{batchname}}</td>
            <td>{{coursename}}</td>
            <td>{{username}}</td>
            <td>{{useremail}}</td>
        </tr>
        {{/users}}
        
    
    </table>
</div>
