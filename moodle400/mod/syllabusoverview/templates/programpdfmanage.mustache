{{#messages}}
    <div class="localmessage card mt-2 mb-2">
        <div class="card-body">
            <p><b>{{name}}: </b>{{value}}</p>

            <a href="{{featureurl}}&messageid={{id}}">
            {{#pix}} t/edit, core, Edit this section {{/pix}}
            </a>
            <a href="{{featureurl}}&messageid={{id}}&del=1">
            {{#pix}} t/delete, core, Edit this section {{/pix}}
            </a>
        </div>
    </div>
{{/messages}}
{{#pdfdata}}
    <iframe src="{{programpdfpath}}" width="100%" height="500"></iframe><br>
    <a href="{{pdfurl}}&messageid={{id}}">
    {{#pix}} t/edit, core, Edit this section {{/pix}}
    </a>
    <a href="{{pdfurl}}&messageid={{id}}&del=1">
    {{#pix}} t/delete, core, Delete this section {{/pix}}
    </a>
{{/pdfdata}}
<hr>
<input type="button" class="btn btn-primary" value="{{newprogrampdf}}" onclick="location.href='{{featureurl}}'" />
{{^pdfdata}}
    <input type="button" class="btn btn-primary" value="{{addpdf}}" onclick="location.href='{{pdfurl}}'" />
{{/pdfdata}}
<input type="button" class="btn btn-secondary" value="{{back}}" onclick="location.href='{{backurl}}'">