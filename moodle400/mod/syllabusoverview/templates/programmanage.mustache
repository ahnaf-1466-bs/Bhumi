{{#messages}}
    <div class="localmessage{{messagetype}} card mt-2 mb-2">
        <div class="card-body">
            <p><b>{{programname}}</b>{{name}}</p>
            <a href="{{featureurl}}&programid={{id}}">
            {{#pix}} t/edit, core, Edit this section {{/pix}}
            </a>
            <a href="{{featureurl}}&programid={{id}}&del=1">
            {{#pix}} t/delete, core, Delete this section {{/pix}}
            </a>
            <a href="{{viewdatetime}}&programid={{id}}" class="btn btn-sm rounded-2 btn-secondary">
            {{viewprogramdatetime}}
            </a>
        </div>
    </div>
{{/messages}}

<hr>
{{^messages}}
    <input type="button" class="btn btn-primary" value="{{addprogram}}" onclick="location.href='{{featureurl}}'" />
{{/messages}}
<input type="button" class="btn btn-primary" value="{{adddetails}}" onclick="location.href='{{detailsurl}}'" />
